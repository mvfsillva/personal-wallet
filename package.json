{
  "name": "personal-wallet",
  "version": "0.0.0",
  "description": "personal wallet for crypto coins",
  "main": "index.js",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "start": "next start",
    "lint": "xo --quiet",
    "lint:fix": "xo --quiet --write '**/*.js'",
    "lint:css": "stylelint './components/**/*.js' './styles/**/*.js' './pages/**/*.js'",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 9001"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-loader": "^8.0.5",
    "classnames": "^2.2.6",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^7.0.0",
    "form-serialize": "^0.7.2",
    "hex-rgb": "^4.1.0",
    "next": "^8.1.0",
    "next-offline": "^3.3.8",
    "next-routes": "^1.4.2",
    "nookies": "^2.0.4",
    "polished": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "shortid": "^2.2.14",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/addon-centered": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "babel-eslint": "^10.0.1",
    "babel-plugin-inline-dotenv": "^1.3.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "stylelint": "^10.0.1",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.6.0",
    "xo": "^0.24.0"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^config/([^\\.]*)$": "<rootDir>/config/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/config/enzyme.setup.js"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/no-unassigned-import": 0,
      "import/no-unresolved": 0
    },
    "globals": [
      "jest",
      "expect",
      "it",
      "describe",
      "jest",
      "localStorage"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "yarn lint:css",
      "prettier --semi false --single-quote --print-width 100 --tab-width 2 --trailing-comma all --write",
      "git add"
    ]
  }
}
