{
  "name": "personal-wallet",
  "version": "0.0.0",
  "description": "personal wallet for crypto coins",
  "main": "index.js",
  "author": "Marcus Silva <mvfsillva@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "node server",
    "build": "next build",
    "start": "next start",
    "lint": "xo --quiet",
    "lint:fix": "xo --quiet --write '**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "next": "^8.1.0",
    "next-offline": "^3.3.8",
    "next-routes": "^1.4.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-inline-dotenv": "^1.3.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "xo": "^0.24.0"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^config/([^\\.]*)$": "<rootDir>/config/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/config/enzyme.setup.js"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/no-unassigned-import": 0,
      "import/no-unresolved": 0
    },
    "globals": [
      "expect",
      "it",
      "describe"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --print-width 100 --tab-width 2 --trailing-comma all --write",
      "git add"
    ]
  }
}
